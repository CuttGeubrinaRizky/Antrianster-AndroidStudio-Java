<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/dashboards" />

    <Button
        android:id="@+id/btnPilih"
        android:layout_width="351dp"
        android:layout_height="75dp"
        android:background="#00FFFFFF"
        android:onClick="btnPilih"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553" />

    <Button
        android:id="@+id/btnKeluar"
        android:layout_width="357dp"
        android:layout_height="84dp"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:onClick="btnKeluar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.648"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPilih" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="113dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="125dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fontFamily="@font/merriweather_bold"
            android:text="Nama"
            android:textColor="#2C2727"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textViewNik"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fontFamily="@font/merriweather_bold"
            android:text="NIK"
            android:textColor="#2C2727"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textViewHp"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:fontFamily="@font/merriweather_bold"
            android:text="Hp"
            android:textColor="#2C2727"
            android:textSize="22sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>